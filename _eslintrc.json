{
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "env": {
      "node": true
  },
  "extends": "google",
  "rules": {
      "indent": [
          "error",
          2
      ],
      "comma-dangle": [
          "error",
          "never"
      ],
      "max-len": [
          "error",
          120
      ],
      "switch-colon-spacing": [
          "error",
          {
              "after": true,
              "before": false
          }
      ]
  }
}
